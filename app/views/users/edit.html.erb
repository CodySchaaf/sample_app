<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">

    <%= render 'form', user: @user, label: 'Save changes' %>
   
    <%= gravatar_for(@user, size: 150) %>
    <%= link_to 'change', "http://gravatar.com/emails", target: '_blank' %>
  </div>
</div>